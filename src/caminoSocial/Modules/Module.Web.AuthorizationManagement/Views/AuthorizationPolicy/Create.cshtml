@{
    ViewData["Title"] = "Create authorization policy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model AuthorizationPolicyModel

<div class="card-header bg-dark text-light">
    <a asp-action="Index" asp-controller="AuthorizationPolicy" class="btn btn-sm btn-secondary">
        <i class="fa fa-arrow-left"></i>
    </a>
    @ViewData["Title"]
</div>
<div class="card-body">
    <form method="post" asp-action="Create" asp-controller="AuthorizationPolicy">
        <partial name="_CreateOrUpdateForm" />
    </form>
</div>
